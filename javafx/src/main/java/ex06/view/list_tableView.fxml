<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ex06.list_tableViewController">
   <children>
      <HBox layoutX="23.0" layoutY="40.0" prefHeight="152.0" prefWidth="450.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="150.0" spacing="10.0">
               <children>
                  <Label text="listView" />
                  <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="tableView" />
                  <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="스마트폰" />
                      <TableColumn prefWidth="75.0" text="이미지" />
                    </columns>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="150.0" spacing="10.0">
               <children>
                  <Label text="imageView" />
                  <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="130.0" pickOnBounds="true" preserveRatio="true" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" layoutX="23.0" layoutY="230.0" prefHeight="63.0" prefWidth="450.0" spacing="10.0">
         <children>
            <Button fx:id="btnOk"  	onAction="#OkAction" mnemonicParsing="false" text="확인" />
            <Button fx:id="btnExit" onAction="#ExitAction" mnemonicParsing="false" text="취소" />
         </children>
      </HBox>
   </children>
</AnchorPane>
